@page "/projects"
@inject HttpClient Http

<h3>Projects</h3>

@if (projects == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Available Tasks</th>
                <th>Completed Tasks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in projects)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>@project.Tasks.Count(_ => _.Status != Models.TaskStatus.Finished)</td>
                    <td>@project.Tasks.Count(_ => _.Status == Models.TaskStatus.Finished)</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Models.Project[] projects;

    protected override async Task OnInitializedAsync()
    {
        projects = await Http.GetFromJsonAsync<Models.Project[]>("sample-data/projects.json");
    }
}
